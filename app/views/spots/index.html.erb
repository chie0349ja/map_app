<%= render "shared/header" %>

<div class="container">
  <% if @params[:q] %>
  <div class="geolonia" data-geojson="/spots.json?q[name_cont]=<%= @params["q"]["name_cont"]%>&q[category_id_eq]=<%= @params["q"]["category_id_eq"] %>" style="height:300px;" data-geolocate-control="on"></div>
  <% else %>
  <div class="geolonia" data-geojson="/spots.json" style="height:300px;" data-geolocate-control="on"></div>
  <% end %>
</div>

<%= search_form_for @q, url: search_spots_path, html: {id: "detailed-search-form"},method: :get do |f| %>
  <div class="search-field-container">
    <div class="search-field">
      <%#= f.label :name_cont, 'キーワード' %>
      <%= f.text_field :name_cont, placeholder: ' キーワードで探す', class: "search-field-input" %>
    </div>

    <div class="search-field">
      <%#= f.label :name_cont, 'カテゴリ' %>
      <%= select_tag "q[category_id_eq]",options_for_select(Category.all.map { |c| [c.name, c.id] }, params[:q]&.[](:category_id_eq)), include_blank: "-- カテゴリで検索 --", class: "search-field-select" %>
    </div>
  </div>

  <div class="search-btn-field">
    <%= f.submit "検索", class: "search-btn", id: "search-button" %>
  </div>
  
  <button class="clear-btn">
    <%= link_to "クリア", spots_path, class: "clear-btn-name" %>
  </button>
<% end %>


<div class="container"> 
  <div id="spots">
    <% @spots.in_groups_of(3, false) do |spot_group| %>
      <div class="row">
        <% spot_group.each do |spot| %> 
          <div class="col-md-4">
            <%= render spot %>
          </div>
        <% end %>
      </div>
    <% end %>    
  </div>
</div>

<%= link_to(new_spot_path,class: "purchase-btn") do %>
  <span class="purchase-btn-text">登録する</span>
  <%= image_tag "icon_new.png", size: "185x50", class: "purchase-btn-icon" %>
<% end %>

<script type="text/javascript" src="https://cdn.geolonia.com/v1/embed?geolonia-api-key=<%= ENV['MAP_API_KEY'] %>"></script>

