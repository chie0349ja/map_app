<%= render "shared/header" %>

<%= form_with model: @user, url:user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='user-sign_in'>
      会員情報入力
    </h2>
    <label class="caution"><%= image_tag("tomato.png", class:"tomato-icon") %>は必須入力です</label>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span><%= image_tag("tomato.png", class:"tomato-icon") %></span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span><%= image_tag("tomato.png", class:"tomato-icon") %></span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>
<div class="line-btn">
  <label class="caution-line">LINEでログインされる場合はこちらから </label>
  <%= button_to user_line_omniauth_authorize_path, data: { turbo: false }, method: :post, class: "post" do %>
    <%= image_tag "btn_login_base.png", alt: "LINEでログイン", class: "line_login" %>
  <% end %>
</div>
<div class="link">
  <%= link_to '新規会員登録へ', new_user_registration_path %>
</div>